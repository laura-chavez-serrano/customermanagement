<h1>Listing Customers</h1>
 <%= link_to 'New Customer', new_address_book_path %>
  
<table>
  <tr>
    <th>Customer_Type</th>
    <th>Name</th>
    <th> Address</th>
    <th>City </th>
      <th> email</th>
      <th>Type </th>
      <th> Phone</th>
      <th> Anniversary</th>
      <th> Status</th>
      <th> Category</th>
  </tr>
 
  <% @address_books.each do |address| %>
    <tr>
      <td><%= address.customer_type %></td>
      
      <td><%= address.fullname%></td>
      <td><%= address.address%></td>
      <td><%= address.city%></td>
      <td><%= address.email%></td>
      <td><%= address.phonetype%></td>
      <td><%= number_to_phone(address.phone, area_code: true) %></td>
      
      <td><%= address.anniversary%></td>
       <td><%= address.status%></td>
      <td><%= address.category%></td>
      <td><%= link_to 'Details', edit_address_book_path(address) %></td>
      <td><%= link_to 'Edit', edit_address_book_path(address) %></td>
      <td><%= link_to 'Destroy', address_book_path(address),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
              <%# <td><%= link_to 'Promotions', address_book_promotions_path(address) %></td> %>
    </tr>
  <% end %>
</table>